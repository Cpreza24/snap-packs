<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lenses</title>
    <link rel="stylesheet" href="/assets/styles.css">
</head>
<body>
    <%- include('../partials/_navbar') %>
    <h1>Lens Index</h1>
    <h2>Lens Inventory</h2>
    <div class="flex justify-center">
        <% if (lens.length === 0) { %>
            <p>No lenses stored</p>
        <% } else { %>
            <ul>
                <% lens.forEach(item => { %>
                    <li>
                        <a href="/users/<%= user._id %>/lens/<%= item._id %>"><%= item.make %> <%= item.focalLength %>mm</a>
                    </li>
                <% }) %>
            </ul>
            <% } %> 
    </div>
    <a href="/users/<%=user._id%>/lens/new">Add Lens</a>
</body>
</html>