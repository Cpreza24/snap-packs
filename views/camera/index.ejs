<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        <%- include('../partials/_navbar.ejs') %>
        <h1>inventory index page</h1>
        <h2>Camera Inventory</h2>
        <div class="inventory-div">
            <% if (camera.length === 0) { %>
                <p>Nothing in camera bag</p>
            <% } else { %>
                <ul>
                    <% camera.forEach(item => { %>
                        <li><a href="/users/<%= user._id %>/camera/<%= item._id %>"><%= item.make %> <%= item.model %></li></a>
                    <% }) %>
                </ul>
                <% } %>
        </div>
        <div class="new-camera-container">
            <a href="/users/<%=user._id%>/camera/new">Add Camera</a>
        </div>
    </body>
</html>